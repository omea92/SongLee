<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <script src="http://code.jquery.com/jquery-1.12.4.js"></script>
    <script>
      $(document).ready(function(){
          $("#header").load("/include/header.ejs");
          $("#sidebar-wrapper").load("/include/sideadminpage.ejs");
      });

      function userdetail(id){
        location.href='/admin/user_detail?user_id='+id;
      }
    </script>
  </head>
    <body>
    <div id="header"></div>
    <div id="page-wrapper">
      <div id="sidebar-wrapper"></div>

      <div id="page-content-wrapper">
        <div class="container-fluid">

          <h1>회원 관리</h1>
          <table class="table table-bordered table-hover">
            <thead>
              <th>아이디</th>
              <th>이름</th>
              <th>생일</th>
              <th>성별</th>
              <th>E-Mail</th>
              <th>구분</th>
            </thead>
            <tbody>
            <% users.forEach(function(user){ %>
            <tr>
              <td><a href="javascript:userdetail('<%= user.user_id %>')"><%= user.user_id %></a></td>
              <td><%= user.name %></td>
              <td><%= user.birthdate %></td>
              <td><%= user.gender %></td>
              <td><%= user.email %></td>
              <td><%= user.type %></td>
            </tr>
             <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
